From 2338a6850def63856e6c38ed262808c62a51a219 Mon Sep 17 00:00:00 2001
From: Eshant Gupta <guptaeshant@gmail.com>
Date: Fri, 21 Aug 2020 12:53:31 +0530
Subject: [PATCH 4/4] Adding support for PPC64LE

---
 .travis.yml | 27 +++++++++++++++++++++++----
 1 file changed, 23 insertions(+), 4 deletions(-)

diff --git a/.travis.yml b/.travis.yml
index e6ee3e9..008f531 100644
--- a/.travis.yml
+++ b/.travis.yml
@@ -1,29 +1,48 @@
+dist: trusty
+sudo: required
+
+arch:
+  - amd64
+  - ppc64le
+      
 language: c
+
 before_script:
   - autoreconf -if
+
 script:
   - CFLAGS=-coverage LDFLAGS=-lgcov ./configure --prefix=/usr
   - make -k check V=1 TESTS=
   - if ! sudo make check; then cat ./test-suite.log ; exit 1; fi
-after_success:
-  - bash <(curl -s https://codecov.io/bash)
+
 compiler:
   - clang
   - gcc
-dist: trusty
-sudo: required
+
+matrix:
+  exclude:
+    - arch: ppc64le
+      compiler: clang
+
 addons:
   apt:
     packages:
       - libcryptsetup-dev
+      
   coverity_scan:
     project:
       name: "latchset/luksmeta"
       description: "LUKSMeta builds via Travis CI"
+      
     notification_email: npmccallum@redhat.com
     build_command_prepend: "./configure; make clean"
     build_command:   "make -j 4"
     branch_pattern: coverity_scan
+
 env:
   global:
     - secure: ""
+
+after_success:
+  - bash <(curl -s https://codecov.io/bash)
+
